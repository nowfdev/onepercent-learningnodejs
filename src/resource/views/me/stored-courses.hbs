<div class="mt-4">
  <h3>My Courses</h3>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Desc</th>
        <th scope="col" colspan="2">Created At</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td>{{this.createdAt}}</td>
          <td>
            <a
              href="/courses/{{this._id}}/edit"
              type="button"
              class="btn btn-link"
            >Edit</a>
            <a type="button" class="btn btn-link">Delete</a>

          </td>
        </tr>
      {{/each}}

    </tbody>
  </table>
</div>